{
    "manifest_version": 3,
    "name": "Live Channel Categorizer",
    "version": "1.0",
    "description": "Agrupa los canales en directo por categor√≠a en el panel izquierdo.",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["https://www.sitio-streaming.com/*"],
    "content_scripts": [
      {
        "matches": ["https://www.sitio-streaming.com/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    }
  }
